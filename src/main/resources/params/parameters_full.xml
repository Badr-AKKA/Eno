<?xml version="1.0" encoding="UTF-8"?>
<Parameters>
  <Title>
    <!-- no-number ; template ; module ; submodule ; unnumbered-filter -->
    <Browsing>module</Browsing>
    <Sequence>
      <!-- niveau template utile car permet de définir la hiérarchie des séquences, alors même qu'il n'est pas numéroté -->
      <Level name="template"/>
      <Level name="module">
        <!-- toujours affiché -->
        <PreSeq/>
        <!-- Y ; N -->
        <NumParent>N</NumParent>
        <!-- Affiché seulement si un numéro est affiché pour le parent -->
        <PostNumParentSeq/>
        <!-- 1 ; A ; a ; I ; i -->
        <StyleNumSeq>I</StyleNumSeq>
        <!-- Affiché seulement si un numéro est affiché pour la séquence -->
        <PostNumSeq> - </PostNumSeq>
      </Level>
      <!-- pas de numérotation au niveau submodule = pas d'élément -->
      <Level name="submodule"/>
    </Sequence>
    <Question>
      <Level name="module">
        <!-- toujours affiché -->
        <PreQuest>➡ </PreQuest>
        <!-- Y ; N -->
        <NumParent>N</NumParent>
        <!-- Affiché seulement si un numéro est affiché pour le parent -->
        <PostNumParentQuest/>
        <!-- 1 ; A ; a ; I ; i -->
        <StyleNumQuest>1</StyleNumQuest>
        <!-- Affiché seulement si un numéro est affiché pour la question -->
        <PostNumQuest>. </PostNumQuest>
      </Level>
      <!-- La présentation des questions de niveau module et submodule doit être précisée si les deux sont présents ; elle peut être distincte -->
      <Level name="submodule">
        <PreQuest>➡ </PreQuest>
        <NumParent>N</NumParent>
        <PostNumParentQuest/>
        <StyleNumQuest>1</StyleNumQuest>
        <PostNumQuest>. </PostNumQuest>
      </Level>
    </Question>
  </Title>
  <Languages>
    <!-- 1 Language par langue : utile pour Xforms, mais aussi pour pdf -->
    <Language>fr</Language>
  </Languages>
  <!-- Yes / No:par défault -->
  <NumericExample>Yes</NumericExample>
  
  <!-- default /household / business -->
  <StudyUnit>default</StudyUnit>
  <!-- Permet de donner une classe métier à certains faux tableaux pour alterner les couleurs des lignes -->
  <LengthOfLongTable>
    <Length>7</Length>
  </LengthOfLongTable>
  <!-- pertinence de cet argument -->
  <ColtraneQuestions>
    <!--<Debut/>-->
    <!--<Fin/>-->
  </ColtraneQuestions>
  <!-- Oui / Non -->
  <Deblocage>oui</Deblocage>
  
  <pdf-parameters>
    <Format>
      <!-- 0 ; 90 -->
      <Orientation>0</Orientation>
      <!-- 1 ; 2 -->
      <Columns></Columns>
    </Format>
    <Roster>
      <Row>
        <DefaultSize>12</DefaultSize>
      </Row>
    </Roster>
    <Table>
      <Row>
        <DefaultSize>14</DefaultSize>
      </Row>
    </Table>
    <TextArea>
      <Row>
        <DefaultSize>3</DefaultSize>
      </Row>
    </TextArea>
    <Capture>
      <!-- optical ; manual -->
      <Numeric>manual</Numeric>
    </Capture>
    <PageBreakBetween>
      <!-- module ; submodule -->
      <pdf>module</pdf>
    </PageBreakBetween>
    <AccompanyingMails>
      <!-- liste de courriers d'accompagnement Coltrane : ouvertureCOL ; entreeCOL ; relanceCOL ; cnrCOL ; medCOL -->
      <AccompanyingMail>ouvertureCOL</AccompanyingMail>
    </AccompanyingMails>

    <EndQuestion>
      <ResponseTimeQuestion>true</ResponseTimeQuestion>
      <CommentQuestion>true</CommentQuestion>
    </EndQuestion>
  </pdf-parameters>
</Parameters>
